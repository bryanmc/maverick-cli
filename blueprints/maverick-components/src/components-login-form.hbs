<div class="section login-screen-overlay">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<div class="log-reg-form">
					<h1 class="text-center">
						<i class="fa fa-fw fa-magic"></i>Maverick App
						<br>
					</h1>
					<p class="text-center log-reg-form-login-text">Login to Your Maverick App Dashboard Below</p>
					<p class="hide">username: {{model.username}}</p>
					<form role="form" {{action "attemptUserLogin" on="submit"}}>
						<div class="form-group has-feedback">
							{{input  name="username" value=username type="text" class="form-control input-lg" placeholder="Your Email"}}
							<span style="color:black;" class="fa form-control-feedback fa-envelope-o"></span>
						</div>
						<div class="form-group has-feedback">
							{{input name="password" value=password type="password" class="form-control input-lg" placeholder="Password"}}
							<span style="color:black;" class="fa form-control-feedback fa-lock"></span>
						</div>
						<button type="submit" class="btn btn-block btn-lg btn-success">Sign In</button>
						<p class="text-center log-reg-form-login-text"><u>Forgot Your Password?</u></p> 
					</form>
				</div>
			</div>
			<div class="col-md-4 "></div>
		</div>
	</div>
</div>